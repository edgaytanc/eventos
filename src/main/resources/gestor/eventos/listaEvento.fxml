<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="489.0" prefWidth="604.0" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gestor.eventos.ListaEventoController">
    <AnchorPane fx:id="eventListPane" xmlns:fx="http://javafx.com/fxml">
    <VBox alignment="TOP_CENTER">
        <Label alignment="CENTER" contentDisplay="CENTER" text="Lista de Eventos">
            <font>
               <Font name="Tahoma Bold" size="18.0" />
            </font>
            <padding>
               <Insets bottom="20.0" />
            </padding></Label>
        <TableView fx:id="eventTable" prefHeight="400.0" prefWidth="389.0">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="125.60003662109375" text="Nombre del Evento" />
                <TableColumn fx:id="dateColumn" prefWidth="109.60003662109375" text="Fecha" />
                <TableColumn fx:id="sinopsisColumn" prefWidth="138.3999786376953" text="Lugar" />
            </columns>
        </TableView>
        <HBox>
            <Button fx:id="btnSeleccionar" onAction="#selectEvent" text="Seleccionar Evento" />
            <Button fx:id="btnEditar" onAction="#editEvent" text="Editar Evento" />
            <Button fx:id="btnEliminar" onAction="#deleteEvent" text="Eliminar Evento" />
        </HBox>
    </VBox>
      <VBox.margin>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </VBox.margin>
      <padding>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </padding>
</AnchorPane>

</VBox>
